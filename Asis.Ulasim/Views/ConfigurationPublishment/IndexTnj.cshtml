@{
    ViewData["Title"] = "IndexTnj";
    Layout = "~/Views/Shared/_LayoutTnj.cshtml";
}
<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Card-->
        <div class="card card-custom">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        Configuration Publishment
                    </h3>
                </div>
            </div>
            <div class="card-body">
                <!--begin: Search Form-->
                <!--begin::Search Form-->
                <div class="mb-7">
                    <div class="row align-items-center">
                        <div class="col-lg-12 col-xl-12">
                            <div class="row align-items-center">
                                <div class="col-md-3 my-2 my-md-0">
                                    <div class="d-flex align-items-center">
                                        <label class="mr-3 mb-0 d-none d-md-block">Capability:</label>
                                        <select class="form-control" id="kt_datatable_search_capability">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3 my-2 my-md-0">
                                    <div class="d-flex align-items-center">
                                        <label class="mr-3 mb-0 d-none d-md-block">Device Type:</label>
                                        <select class="form-control" id="kt_datatable_search_device_type">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3 my-2 my-md-0">
                                    <div class="d-flex align-items-center">
                                        <label class="mr-3 mb-0 d-none d-md-block">Equipment:</label>
                                        <select class="form-control" id="kt_datatable_search_equipment">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3 my-2 my-md-0">
                                    <div class="d-flex align-items-center">
                                        <label class="mr-3 mb-0 d-none d-md-block">Configuration:</label>
                                        <select class="form-control" id="kt_datatable_configuration">
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Search Form-->
                <!--end: Search Form-->
                <!--begin: Datatable-->
                <div class="datatable datatable-bordered datatable-head-custom" id="kt_datatable"></div>
                <!--end: Datatable-->
            </div>
        </div>
        <!--end::Card-->
        <br />
        <br />
        <!--begin::Card-->
        <div class="card card-custom" id="configurationPublishmentDetail_visible" style="display:none;">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        @await Html.PartialAsync("CustomPartial/_PartialNetwork")
                        @await Html.PartialAsync("CustomPartial/_PartialDeviceType")
                        @await Html.PartialAsync("CustomPartial/_PartialDevice")
                        <input type="button" class="btn btn-secondary mr-5" value="CANCEL" />
                        <input id="btnCreate" type="button" class="btn btn-danger mr-5" value="CREATE" />
                        <input id="btnSend" type="button" class="btn btn-info mr-2" value="SEND" />
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="exampleTextarea">Configuration Preview:</label>
                            <textarea id="xjsoneditor" class="form-control form-control-solid" rows="30"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end::Card-->
        <br />
        <br />
        <!--begin::Card-->
        <div id="partialView">
            @await Html.PartialAsync("_PartialConfigurationManagementQ")
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>
<!--end::Entry-->


@section Scripts {
    <!--begin::Page Vendors(used by this page)-->
    <script src="template/dist/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <!--end::Page Vendors-->
    <script src="~/js/Definition/ConfigurationPublishment/ConfigurationPublishment.js"></script>
}
