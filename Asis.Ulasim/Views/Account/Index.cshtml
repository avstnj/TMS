@using Microsoft.Extensions.Configuration
@model Asis.Ulasim.Models.Account.LoginViewModel
@inject IConfiguration configuration;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr" xml:lang="tr">
<!-- begin::Head -->
<head>
    <title>
        @configuration.GetSection("MyDefaultSettings")["TitleSettings"]
    </title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="description" content="Default form examples">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!--begin::Web font -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <link href="~/css/vendors/base/vendors.bundle.css" rel="stylesheet" />
    <link href="~/css/default/base/style.bundle.css" rel="stylesheet" />

    <script src="~/css/vendors/base/vendors.bundle.js"></script>
    <script src="~/css/default/base/scripts.bundle.js"></script>
    <!--end::Base Scripts -->

    <link rel="shortcut icon" href="~/css/default/media/img/logo/Asis_Logo.ico" style="left: 0px; top: 0px;" />
</head>
<!-- end::Head -->
<!-- end::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" id="m_login" style="background-image: url(/css/default/custom/user/bg-3.jpg);">
            <div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
                <div class="m-login__container">
                    <div class="m-login__logo" style="margin: auto">
                        <a href="#">
                            <img src="@configuration.GetSection("MyDefaultSettings")["LogoSettings"]" />
                        </a>
                    </div>
                    <div class="m-login__signin">
                        <form class="m-login__form m-form" asp-controller="Account" asp-action="Index" method="post">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="Kullanıcı Adınız" name="userName" asp-for="UserName" autocomplete="off">
                            </div>
                            <div class="form-group m-form__group">
                                <input class="form-control m-input m-login__form-input--last" type="password" placeholder="Şifreniz" name="Password" asp-for="Password">
                            </div>
                                <div class="row m-login__form-sub">
                                    <div class="col m--align-left m-login__form-left">
                                        <label class="m-checkbox  m-checkbox--focus">
                                            <input type="checkbox" name="remember" asp-for="Remember">
                                            Remember Me
                                            <span></span>
                                        </label>
                                    </div>
                                    <div class="col m--align-right m-login__form-right">
                                        <a href="javascript:;" id="m_login_forget_password" class="m-link">
                                            Forget Password
                                        </a>
                                    </div>
                                </div>
                                <div class="m-login__form-action">
                                    <button id="m_login_signin_submitt" type="submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">
                                        Sign In
                                    </button>
                                </div>
                        </form>
                    </div>
                    <div class="m-login__forget-password">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                Forget Password
                            </h3>
                            <div class="m-login__desc">
                                Enter your email address to reset your password:
                            </div>
                        </div>
                        <form class="m-login__form m-form" action="">
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="User" name="fullname" id="kullanici" autocomplete="off">
                            </div>
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="Email" name="email" id="m_email" autocomplete="off">
                            </div>
                            <div class="m-login__form-action">
                                <button id="m_login_forget_password_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primaryr">
                                    Claim
                                </button>
                                &nbsp;&nbsp;
                                <button id="m_login_forget_password_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom m-login__btn">
                                    Cancel
                                </button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- end:: Page -->
</body>
<script src="~/css/default/custom/user/login.js"></script>
<!-- end::Body -->
</html>